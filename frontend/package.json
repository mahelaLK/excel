{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Excel file generator with React + Electron",
  "author": "mahelalk",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron electron/main.js",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.mahelalk.excelgen",
    "productName": "ExcelGen",
    "files": [
      "electron/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/@tailwindcss/oxide-*",
      "!node_modules/@emnapi/**"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.6"
  }
}
